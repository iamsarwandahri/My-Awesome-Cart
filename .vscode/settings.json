{
  "editor.codeActionsOnSave": {
    "source.fixAll.flake8": "explicit"
  },
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=100"],
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100
}